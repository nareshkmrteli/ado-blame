{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": ["es6"],
		"sourceMap": true,
		"rootDir": ".",
		"strict": true,
		"skipLibCheck": true,
		"types": [
			"node",
			"mocha",
			"vscode"
		]
	},
	"include": [
		"src/**/*",
		"test/**/*"
	],
	"exclude": [
		"node_modules"
	]
}